<div class="mx-auto max-w-sm">
  <h1 class="text-3xl font-bold text-maroon mb-6"><%= t(".title") %></h1>

  <%= form_with(model: @player, url: profile_path, method: :patch) do |f| %>
    <% if @player.errors.any? %>
      <div class="mb-6 rounded-md border border-red-300 bg-red-50 p-4">
        <ul class="list-disc pl-5 text-sm text-red-700">
          <% @player.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="space-y-4">
      <div>
        <%= f.label :name, t(".name_label"), class: "block text-sm font-medium text-neutral-700 mb-1" %>
        <p class="text-xs text-neutral-500 mb-1"><%= t(".name_hint") %></p>
        <%= f.text_field :name,
              class: "w-full rounded-md border border-neutral-300 px-3 py-2 text-sm focus:border-maroon focus:ring-maroon focus:outline-none" %>
      </div>

      <div>
        <%= f.label :comment, t(".comment_label"), class: "block text-sm font-medium text-neutral-700 mb-1" %>
        <%= f.text_area :comment, rows: 4,
              class: "w-full rounded-md border border-neutral-300 px-3 py-2 text-sm focus:border-maroon focus:ring-maroon focus:outline-none" %>
      </div>

      <div>
        <%= f.label :photo, t(".photo_label"), class: "block text-sm font-medium text-neutral-700 mb-1" %>
        <div class="mb-2">
          <% if @player.photo.attached? %>
            <%= image_tag url_for(@player.photo.variant(resize_to_fill: [96, 96])), class: "w-24 h-24 rounded-full object-cover" %>
          <% else %>
            <%= image_tag Player::DEFAULT_PHOTO_PATH, class: "w-24 h-24 rounded-full object-cover" %>
          <% end %>
        </div>
        <%= f.file_field :photo,
              accept: "image/*",
              class: "block w-full text-sm text-neutral-500 file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:text-sm file:font-medium file:bg-neutral-100 file:text-neutral-700 hover:file:bg-neutral-200" %>
      </div>

      <div>
        <%= f.submit t(".save"),
              class: "w-full rounded-md bg-neutral-900 px-6 py-2 text-white text-sm font-medium hover:bg-neutral-700 transition-colors cursor-pointer" %>
      </div>
    </div>
  <% end %>
</div>
