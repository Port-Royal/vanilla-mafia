<div class="mx-auto max-w-sm">
  <h1 class="text-3xl font-bold text-maroon mb-6"><%= t("devise.sessions.new.title") %></h1>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="space-y-4">
      <div>
        <%= f.label :email, class: "block text-sm font-medium text-neutral-700 mb-1" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email",
              class: "w-full rounded-md border border-neutral-300 px-3 py-2 text-sm focus:border-maroon focus:ring-maroon focus:outline-none" %>
      </div>

      <div>
        <%= f.label :password, class: "block text-sm font-medium text-neutral-700 mb-1" %>
        <%= f.password_field :password, autocomplete: "current-password",
              class: "w-full rounded-md border border-neutral-300 px-3 py-2 text-sm focus:border-maroon focus:ring-maroon focus:outline-none" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="flex items-center gap-2">
          <%= f.check_box :remember_me, class: "rounded border-neutral-300 text-maroon focus:ring-maroon" %>
          <%= f.label :remember_me, class: "text-sm text-neutral-600" %>
        </div>
      <% end %>

      <div>
        <%= f.submit t("devise.sessions.new.sign_in"),
              class: "w-full rounded-md bg-neutral-900 px-6 py-2 text-white text-sm font-medium hover:bg-neutral-700 transition-colors cursor-pointer" %>
      </div>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
