<div class="mx-auto max-w-sm">
  <h1 class="text-3xl font-bold text-maroon mb-6"><%= t("devise.passwords.edit.title") %></h1>

  <%= render "devise/shared/flash" %>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <div class="space-y-4">
      <div>
        <%= f.label :password, t("activerecord.attributes.user.password"), class: "block text-sm font-medium text-neutral-700 mb-1" %>
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password",
              class: "w-full rounded-md border border-neutral-300 px-3 py-2 text-sm focus:border-maroon focus:ring-maroon focus:outline-none" %>
      </div>

      <div>
        <%= f.label :password_confirmation, class: "block text-sm font-medium text-neutral-700 mb-1" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password",
              class: "w-full rounded-md border border-neutral-300 px-3 py-2 text-sm focus:border-maroon focus:ring-maroon focus:outline-none" %>
      </div>

      <div>
        <%= f.submit t("devise.passwords.edit.change_password"),
              class: "w-full rounded-md bg-neutral-900 px-6 py-2 text-white text-sm font-medium hover:bg-neutral-700 transition-colors cursor-pointer" %>
      </div>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
