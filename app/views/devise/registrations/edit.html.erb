<div class="mx-auto max-w-sm">
  <h1 class="text-3xl font-bold text-maroon mb-6"><%= t("devise.registrations.edit.title") %></h1>

  <%= render "devise/shared/flash" %>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="space-y-4">
      <div>
        <%= f.label :email, class: "block text-sm font-medium text-neutral-700 mb-1" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email",
              class: "w-full rounded-md border border-neutral-300 px-3 py-2 text-sm focus:border-maroon focus:ring-maroon focus:outline-none" %>
      </div>

      <div>
        <%= f.label :password, class: "block text-sm font-medium text-neutral-700 mb-1" %>
        <p class="text-xs text-neutral-500 mb-1">
          (<%= t("devise.registrations.edit.leave_blank") %>)
        </p>
        <%= f.password_field :password, autocomplete: "new-password",
              class: "w-full rounded-md border border-neutral-300 px-3 py-2 text-sm focus:border-maroon focus:ring-maroon focus:outline-none" %>
      </div>

      <div>
        <%= f.label :password_confirmation, class: "block text-sm font-medium text-neutral-700 mb-1" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password",
              class: "w-full rounded-md border border-neutral-300 px-3 py-2 text-sm focus:border-maroon focus:ring-maroon focus:outline-none" %>
      </div>

      <div>
        <%= f.label :current_password, class: "block text-sm font-medium text-neutral-700 mb-1" %>
        <p class="text-xs text-neutral-500 mb-1">
          (<%= t("devise.registrations.edit.current_password_hint") %>)
        </p>
        <%= f.password_field :current_password, autocomplete: "current-password",
              class: "w-full rounded-md border border-neutral-300 px-3 py-2 text-sm focus:border-maroon focus:ring-maroon focus:outline-none" %>
      </div>

      <div>
        <%= f.submit t("devise.registrations.edit.update"),
              class: "w-full rounded-md bg-neutral-900 px-6 py-2 text-white text-sm font-medium hover:bg-neutral-700 transition-colors cursor-pointer" %>
      </div>
    </div>
  <% end %>

  <div class="mt-10 border-t border-neutral-200 pt-6">
    <h2 class="text-lg font-medium text-red-700 mb-2"><%= t("devise.registrations.edit.cancel_account") %></h2>
    <%= button_to t("devise.registrations.edit.cancel_account"), registration_path(resource_name),
          method: :delete,
          data: { turbo_confirm: t("devise.registrations.edit.cancel_confirm") },
          class: "rounded-md border border-red-300 px-4 py-2 text-sm text-red-700 hover:bg-red-50 transition-colors cursor-pointer" %>
  </div>

  <%= render "devise/shared/links" %>
</div>
